[MESSAGES CONTROL]
# Disable specific Pylint messages by code.
# C0301: line-too-long
disable=C0301,E0611

[FORMAT]
# Allow specific short variable names that are common in mathematical
# or scientific contexts, rather than disabling the check completely.
# C0103: invalid-name
good-names=i,j,k,D,n,v,gain_G1,gain_G2